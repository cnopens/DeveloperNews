<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/image_bg_color"
    tools:context="com.myxh.developernews.ui.activity.ImageActivity">

    <include
        android:id="@+id/image_appbar_layout"
        layout="@layout/include_main_appbar"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/image_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/image_appbar_layout"/>

</RelativeLayout>
